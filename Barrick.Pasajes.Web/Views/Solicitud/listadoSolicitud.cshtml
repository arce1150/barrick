                        <tfoot class="pagin">
                            <tr>
                                <td colspan="14" style="background:#ffffff !important">  
                                        <ul id="ulPaginacion">
                                            @for (var i = 0; i < totalPaginas; i++)
                                            {
                                               <li><a onclick="paginarSolicitudes(@(i+1))" href="javascript:void(0)">@(i +1)</a></li>
